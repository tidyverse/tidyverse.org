options(tibble.print_min = 4L, tibble.print_max = 4L)
library(dplyr)
library(glue)

link <- function(fun, pkg = "dplyr", alias = fun) {
  f <- if (pkg == "dplyr") fun else glue("{pkg}::{fun}")
  glue("[`{f}()`](https://{pkg}.tidyverse.org/reference/{alias}.html)")  
}

